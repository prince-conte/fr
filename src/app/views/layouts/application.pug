doctype html

html.mod_no-js(lang='en')
    include _head

    style.
        .loading-box {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #fff;
            z-index: 99999999;
        }

    body
        .loading-box.js-page-loading
            img(src='img/loading.gif')

        .page.js-page-body
            include components/_site_header

            main.site-main.js-main
                block main

            include components/_site_footer
            include components/_mobile_menu

            include _scripts
